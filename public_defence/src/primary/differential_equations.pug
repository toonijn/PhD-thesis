section
  section#de-background(
    data-animation="function-example",
    data-animation-state="simple"
  )
    .flex-slide
      h2 Some mathematical background

      .flex-slide-fill.igrid(
        style="grid-template-columns: 1fr 1fr; grid-template-rows: 1fr"
      )
        .igrid-item(
          style="display: flex; flex-direction: column; justify-content: space-around; height: 100%"
        )
          div
            h4 numbers
            p $$ \mathbb{N}, \mathbb{Q}, \mathbb{R}, \mathbb{C} $$
          div
            h4 vectors
            p $$ \mathbf{v} = \begin{pmatrix} v_x \\ v_y \end{pmatrix} \in \mathbb{R}^2 $$
        .igrid-item
          h4 scalar functions
            p
            | $$ f : \mathbb{R} \to \mathbb{R} $$
            | $$ f(x) = x^3 - x $$
            p
            | $$ g : \mathbb{R}^2 \to \mathbb{R} $$
            | $$ g(x, y) = \sin(x) \, e^{-x^2 - y^2} $$
  section#de-derivatives(
    data-animation="function-example",
    data-animation-state="derivatives"
  )
    .flex-slide
      h2 Derivatives

      .flex-slide-fill.igrid(style="grid-template-columns: 0.5fr 1fr 1fr")
        .igrid-item
        .igrid-item
          | $$ f : \mathbb{R} \to \mathbb{R} $$
          | $$ f(x) $$
        .igrid-item
          | $$ g : \mathbb{R}^2 \to \mathbb{R} $$
          | $$ g(x, y) $$
        .igrid-item
          h4 steepness
        .igrid-item
          | $$ \frac{\text{d} f}{\text{d}x} $$
        .igrid-item
          | $$ \frac{\partial g}{\partial x}, \frac{\partial g}{\partial y} $$
        .igrid-item
          h4 valleys
        .igrid-item
          | $$ \frac{\text{d}^2 f}{\text{d}x^2} $$
        .igrid-item
          | $$ \nabla^2 g = \frac{\partial^2 g}{\partial x^2} + \frac{\partial^2 g}{\partial y^2} $$
  section#de-definition(data-animation="first-order-examples")
    .flex-slide
      h2 Differential equations
      p relate unknown functions to their 'shape'

      .flex-slide-fill.igrid(style="grid-template-columns: 1fr 1fr")
        .igrid-item
          h4 first-order example
          | $$ \frac{\text{d} f}{\text{d}x} = f(x) $$
        .igrid-item
          h4 second-order example
          | $$ \frac{\text{d}^2 g}{\text{d}x^2} = -g(x) $$
        .igrid-item
          h4 solution
          | $$ f(x) = c_1\,\exp(x) $$
        .igrid-item
          h4 solution
          | $$ g(x) = c_2 \sin(x) + c_3 \cos(x) $$
